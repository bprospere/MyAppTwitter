<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/tvProfileImage"
        android:layout_width="72dp"
        android:layout_height="41dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="47dp"
        android:layout_toEndOf="@+id/name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="101dp"
        android:layout_height="17dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="101dp"
        android:layout_height="12dp"
        android:layout_below="@id/name"
        android:layout_marginStart="140dp"
        android:layout_marginTop="-3dp"
        android:text="bprospere" />


    <Button
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@id/text1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginStart="5dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="43dp"
        android:text="@string/reply"
        tools:ignore="NotSibling,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnCancel"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="-185dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        app:srcCompat="@drawable/ic_cancel"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProfileImage"
        android:layout_marginTop="63dp"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        tools:ignore="NotSibling">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:drawablePadding="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/reply_this_tweet"
            android:inputType="textImeMultiLine"
            app:drawableLeftCompat="@drawable/arrow_down"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </com.google.android.material.textfield.TextInputLayout>


</RelativeLayout>


