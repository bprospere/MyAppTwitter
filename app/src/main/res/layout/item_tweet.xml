<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-5dp"
        tools:srcCompat="@tools:sample/avatars"
        app:srcCompat="@drawable/ic_heart"/>

    <TextView
        android:id="@+id/usersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/tvScreenName"
        android:fontFamily="sans-serif-thin"
        android:text='Prospere'
        android:layout_toEndOf="@+id/tvScreenName"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:text="bprospere" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:autoLink="all"
        android:fontFamily="sans-serif-thin"
        android:text="This is my tweet"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ic_com"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/ic_comment" />

    <ImageView
        android:id="@+id/ic_rep"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_com"
        app:srcCompat="@drawable/ic_reply" />

    <ImageView
        android:id="@+id/ic_hea"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_rep"
        app:srcCompat="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/ic_sha"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_hea"
        app:srcCompat="@drawable/ic_share" />


</RelativeLayout>