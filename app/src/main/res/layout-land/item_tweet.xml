<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:fontFamily="sans-serif-thin"
        android:text='Prospere'
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:autoLink="all"
        android:fontFamily="sans-serif-thin"
        android:text="This is my tweet"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/usersName"
        android:layout_width="505dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/tvScreenName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-15dp"
        android:text="bprospere" />


    <ImageView
        android:id="@+id/ic_com"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/ic_comment" />

    <ImageView
        android:id="@+id/ic_rep"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_com"
        app:srcCompat="@drawable/ic_reply" />

    <ImageView
        android:id="@+id/ic_hea"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_rep"
        app:srcCompat="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/ic_sha"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvBody"
        android:layout_toEndOf="@id/ic_hea"
        app:srcCompat="@drawable/ic_share" />

</RelativeLayout>